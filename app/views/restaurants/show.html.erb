<div class="container d-flex justify-content-center flex-column align-items-center">

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h3 class="card-title"><%= @restaurant.name %></h3>
      <h6 class="card-subtitle mb-2 text-muted"><%= @restaurant.category %></h6>
      <p class="card-text"><%= @restaurant.address %></p>
      <p class="card-text"><%= @restaurant.phone_number %></p>
      <%= link_to 'Back to list', restaurants_path, class: "card-link" %>
      <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "card-link" %>
    </div>
  </div>
  <% @restaurant.reviews.each do |review| %>
    <div class="card card-review">
      <div class="card-body">
        <%= review.content %>
        <br><%=  'ðŸ”¥' * review.rating %>
      </div>
    </div>
  <% end %>

</div>
