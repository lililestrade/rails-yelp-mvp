<div class="container">
  <h1>List of restaurants :</h1>

  <% @restaurants.each do |restaurant| %>
    <div class="card landing-card">
      <div class="card-body d-flex justify-content-between">
        <%= restaurant.name %>
        <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-outline-info"%>
      </div>
    </div>
  <% end %>

  <div class="create d-flex justify-content-center">
    <%= link_to 'Create a new restaurant', new_restaurant_path, class: "btn btn-outline-warning" %>
  </div>

</div>
